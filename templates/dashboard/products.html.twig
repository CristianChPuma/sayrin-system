{{ include('dashboard/components/head.html.twig',{ 'pagetitle': 'Products' }) }}

<body>

  <!-- Some Variables -->

  <!-- nav -->
  {{ include('dashboard/components/leftnav.html.twig',{ }) }}

  <div class="administration-container uk-height-viewport container-gray">
    <div>

      <div class="container-title">
        <div class="icon-container uk-margin-medium-right">
          <img src="{{ asset('assets/icons/star.svg') }}" alt="">
        </div>

        <div class="section-title uk-margin-medium-right">
          <h1>My Products</h1>
          <h6>Manage your products</h6>
        </div>
      </div>

      <div class="blogmenu-container uk-float-left">
        <div>
          <a href="">
            <span class="uk-icon" uk-icon="icon: upload"></span>
            Add New Product</a>
        </div>
      </div>

    </div>

    <div class="uk-margin-medium-top uk-container">

      <ul class="js-filter uk-child-width-1-3@s uk-grid-match files-container " uk-lightbox="animation: slide" uk-grid="uk-grid">

        {% for product in listProducts %}
          <li>

            <div>

              <a data-type="image" data-caption="{{ product.name }}" href="{{product.cover}}">
                <div class="uk-height-medium uk-background-cover" style="background-image: url({{ product.cover }});">

                  <div class="gradient-overlay"></div>

                  <div class="size-information uk-position-top-right">
                    <p>{{ product.price}}
                      pesos</p>
                  </div>

                  <div class="meta-information uk-position-bottom">
                    <p class="title-container">{{ product.name }}</p>
                    <p>
                      <span class="uk-icon uk-margin-small-right" uk-icon="icon: album"></span>
                      Home</p>
                  </div>

                </div>
              </a>

            </div>

          </li>

        {% endfor %}

      </ul>

    </div>

  </div>

  {% block javascripts %}
    <script src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.2/js/uikit.min.js') }}"></script>
    <script src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.2/js/uikit-icons.min.js') }}"></script>
    <script src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/howler/2.0.12/howler.min.js') }}"></script>
    <script src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js') }}"></script>
    <script src="{{ asset('scripts/main.js') }}"></script>
  {% endblock %}
</body>
</html>
